//Create Password Validation System

using System;

class Program {
 static void Main() {
      while (true) {
      Console.Write("Enter password: ");
      String password = Console.ReadLine();
            
      bool isValid = password.Length >= 8 &&
            HasUpperCase(password) &&
            HasLowerCase(password) &&
            HasDigit(password);
            
            if (isValid) {
        Console.WriteLine("Password accepted!");
        break;
        } else {
        Console.WriteLine("Invalid password. Must be 8+ chars with uppercase, lowercase, and digit.");
        }
    }
    }
    
    static bool HasUpperCase(string pwd) {
    foreach (char c in pwd) {
    if (char.IsUpper(c)) return true;
    }
    return false;
    }
    
    static bool HasLowerCase(string pwd) {
    foreach (char c in pwd) {
    if (char.IsLower(c)) return true;
    }
    return false;
    }
    
    static bool HasDigit(string pwd) {
    foreach (char c in pwd) {
    if (char.IsDigit(c)) return true;
    }
    return false;
    }
}
